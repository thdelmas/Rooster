<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_astral_solar"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/astronomical"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:navigationIcon="@android:drawable/ic_menu_close_clear_cancel"
            app:navigationIconTint="@color/md_theme_dark_primary"
            app:title="Settings"
            app:titleTextColor="@color/md_theme_dark_primary"
            app:titleTextAppearance="@style/TextAppearance.Rooster.HeadlineLarge"
            style="@style/Widget.Material3.Toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Location Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/md_theme_dark_primary"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Coordinates Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Altitude -->
                    <LinearLayout
                        android:id="@+id/altitudeSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/altitudeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Altitude"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/altitudeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0 m"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Latitude -->
                    <LinearLayout
                        android:id="@+id/latitudeSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/latitudeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Latitude"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/latitudeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0Â°"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Longitude -->
                    <LinearLayout
                        android:id="@+id/longitudeSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/longitudeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Longitude"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/longitudeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.0Â°"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Location -->
                    <LinearLayout
                        android:id="@+id/locationSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/locationTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Location"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/locationValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Earth"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:maxLines="1"
                            android:ellipsize="end"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Refresh Location Button -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/syncGpsSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:clickable="true"
                android:focusable="true"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                app:rippleColor="@color/md_theme_dark_primary"
                android:background="@drawable/gradient_sunrise">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/ic_menu_mylocation"
                        android:tint="@color/md_theme_dark_onPrimaryContainer"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Location"/>

                    <TextView
                        android:id="@+id/syncGpsTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Refresh Coordinates"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/md_theme_dark_onPrimaryContainer"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Astronomy Section Header -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Astronomy Data"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/md_theme_dark_primary"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="12dp"/>

            <!-- Day Length Highlight Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/dayLengthSetting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="32dp"
                app:cardElevation="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/gradient_astral_solar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/dayLengthTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day Length"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/white"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:id="@+id/dayLengthValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textAppearance="@style/TextAppearance.Rooster.DisplayLarge"
                        android:textSize="48sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Astronomy Times Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Astronomical Dawn -->
                    <LinearLayout
                        android:id="@+id/astroDawnSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/astroDawnTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Astronomical Dawn"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/astroDawnValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Nautical Dawn -->
                    <LinearLayout
                        android:id="@+id/nauticalDawnSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/nauticalDawnTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nautical Dawn"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/nauticalDawnValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Civil Dawn -->
                    <LinearLayout
                        android:id="@+id/civilDawnSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/civilDawnTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Civil Dawn"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/civilDawnValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Sunrise -->
                    <LinearLayout
                        android:id="@+id/sunriseSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/sunriseTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="â˜€ï¸ Sunrise"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/sunriseValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/sunrise"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Solar Noon -->
                    <LinearLayout
                        android:id="@+id/solarNoonSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/solarNoonTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Solar Noon"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/solarNoonValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Sunset -->
                    <LinearLayout
                        android:id="@+id/sunsetSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/sunsetTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸŒ… Sunset"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/sunsetValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/accent_coral"
                            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                            android:textStyle="bold"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Civil Dusk -->
                    <LinearLayout
                        android:id="@+id/civilDuskSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/civilDuskTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Civil Dusk"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/civilDuskValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Nautical Dusk -->
                    <LinearLayout
                        android:id="@+id/nauticalDuskSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/nauticalDuskTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nautical Dusk"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/nauticalDuskValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Astronomical Dusk -->
                    <LinearLayout
                        android:id="@+id/astroDuskSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <TextView
                            android:id="@+id/astroDuskTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Astronomical Dusk"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                        <TextView
                            android:id="@+id/astroDuskValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:fontFamily="monospace"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Appearance Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appearance"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/md_theme_dark_primary"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

            <!-- Theme Settings Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Theme Mode -->
                    <LinearLayout
                        android:id="@+id/themeModeSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/themeModeTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Theme"
                                android:textColor="@color/md_theme_dark_onSurface"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                            <TextView
                                android:id="@+id/themeModeDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Choose your preferred theme"
                                android:textColor="@color/md_theme_dark_onSurfaceVariant"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/themeModeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Auto"
                            android:textColor="@color/md_theme_dark_primary"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:layout_marginStart="16dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/md_theme_dark_outlineVariant"/>

                    <!-- Dynamic Colors (Material You) -->
                    <LinearLayout
                        android:id="@+id/dynamicColorsSetting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/dynamicColorsTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dynamic Colors"
                                android:textColor="@color/md_theme_dark_onSurface"
                                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"/>

                            <TextView
                                android:id="@+id/dynamicColorsDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Match system wallpaper colors (Android 12+)"
                                android:textColor="@color/md_theme_dark_onSurfaceVariant"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:layout_marginTop="4dp"/>

                        </LinearLayout>

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/dynamicColorsSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:layout_marginStart="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- About Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About"
                android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                android:textColor="@color/md_theme_dark_primary"
                android:textStyle="bold"
                android:paddingHorizontal="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"/>

            <!-- Social Links Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="28dp"
                app:cardElevation="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:id="@+id/iconLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- LinkedIn Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:background="@drawable/badge_background_circular"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:rippleColor="@color/md_theme_dark_primary">

                        <ImageView
                            android:id="@+id/linkedinIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/linkedin_icon"
                            android:padding="14dp"
                            android:tint="@color/md_theme_dark_onPrimaryContainer"
                            android:contentDescription="LinkedIn"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- GitHub Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:background="@drawable/badge_background_circular"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:rippleColor="@color/md_theme_dark_primary">

                        <ImageView
                            android:id="@+id/githubIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/github_icon"
                            android:padding="14dp"
                            android:tint="@color/md_theme_dark_onPrimaryContainer"
                            android:contentDescription="GitHub"/>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Email Icon -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        app:cardBackgroundColor="@android:color/transparent"
                        android:background="@drawable/badge_background_circular"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="2dp"
                        app:strokeWidth="0dp"
                        app:rippleColor="@color/md_theme_dark_primary">

                        <ImageView
                            android:id="@+id/emailIcon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/email_icon"
                            android:padding="14dp"
                            android:tint="@color/md_theme_dark_onPrimaryContainer"
                            android:contentDescription="Email"/>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

