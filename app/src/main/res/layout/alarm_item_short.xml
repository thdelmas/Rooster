<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarmContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        android:layout_marginHorizontal="4dp"
        app:cardBackgroundColor="@android:color/transparent"
        android:background="@drawable/alarm_card_background"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding_large">

            <!-- Header Row -->
            <LinearLayout
                android:id="@+id/alarmBanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <!-- Alarm Label -->
                <TextView
                    android:id="@+id/textViewAlarmLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Alarm"
                    android:textColor="@color/md_theme_dark_onSurface"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Expand/Collapse Button -->
                <ImageButton
                    android:id="@+id/expandButton"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/down_arrow"
                    android:background="@drawable/ripple_circular"
                    android:tint="@color/md_theme_dark_primary"
                    android:scaleType="centerInside"
                    android:padding="8dp"
                    android:contentDescription="Expand alarm details"/>

            </LinearLayout>

            <!-- Time Display Row -->
            <LinearLayout
                android:id="@+id/timePickRaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <TextView
                    android:id="@+id/tvAlarmTime0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At"
                    android:textColor="@color/md_theme_dark_onSurfaceVariant"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tvAlarmTime1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/md_theme_dark_primary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvAlarmTime2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8:30 AM"
                    android:textColor="@color/md_theme_dark_primary"
                    android:textAppearance="@style/TextAppearance.Rooster.DisplayLarge"
                    android:textSize="40sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvAlarmTime3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 AM"
                    android:textColor="@color/md_theme_dark_primary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvAlarmTime4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 AM"
                    android:textColor="@color/md_theme_dark_primary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:visibility="gone"
                    android:layout_marginEnd="4dp"/>

                <TextView
                    android:id="@+id/tvAlarmTime5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00 AM"
                    android:textColor="@color/md_theme_dark_primary"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:visibility="gone"/>

            </LinearLayout>

            <!-- Calculated Time Display -->
            <TextView
                android:id="@+id/calculatedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="32sp"
                android:textColor="@color/md_theme_dark_primary"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginBottom="12dp"/>

            <!-- Bottom Row - Enable Switch -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAlarmEnabled"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Enabled"
                    android:textColor="@color/md_theme_dark_onSurfaceVariant"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"/>

                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchAlarmEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/md_theme_dark_onPrimaryContainer"
                    app:trackTint="@color/md_theme_dark_primaryContainer"
                    tools:ignore="TouchTargetSizeCheck"/>

            </LinearLayout>

            <!-- Extended Details Section -->
            <include 
                layout="@layout/alarm_item_extended"
                android:id="@+id/alarmExtension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
