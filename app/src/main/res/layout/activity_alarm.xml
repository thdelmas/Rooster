<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_astral_solar"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp">

        <!-- Large Time Display -->
        <TextView
            android:id="@+id/timeDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="@color/text_on_glass_primary"
            android:textSize="96sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <!-- Alarm Name -->
        <TextView
            android:id="@+id/alarmName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textColor="@color/text_on_glass_primary"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_marginBottom="48dp"
            android:maxLines="1"
            android:ellipsize="end"/>

        <!-- Button Row: Snooze and Stop -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp">

            <!-- Snooze Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/snoozeButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Snooze"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_dark_onPrimaryContainer"
                app:backgroundTint="@color/md_theme_dark_primaryContainer"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                android:layout_marginEnd="12dp"
                android:visibility="gone"
                style="@style/Widget.Rooster.Button.Filled"/>

            <!-- Stop Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/dismissButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_weight="1"
                android:text="Stop"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:backgroundTint="@color/md_theme_dark_primary"
                app:cornerRadius="8dp"
                app:elevation="0dp"
                android:layout_marginStart="12dp"
                style="@style/Widget.Rooster.Button.Filled"/>

        </LinearLayout>

        <!-- Hidden SeekBar for backward compatibility (if needed) -->
        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            android:max="100"
            android:progress="0"/>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>