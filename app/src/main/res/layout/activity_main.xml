<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_astral_solar"
    android:fitsSystemWindows="true">

    <!-- App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="Rooster"
            app:titleCentered="true"
            app:titleTextColor="@color/md_theme_dark_onBackground"
            app:titleTextAppearance="@style/TextAppearance.Rooster.TitleLarge"
            style="@style/Widget.Material3.Toolbar"/>

    </com.google.android.material.appbar.AppBarLayout>
    
    <!-- Top Corner Buttons -->
    <!-- Alarms Button - Top Left -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alarmButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|start"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/glass_border"
        android:background="@drawable/glass_card_background"
        app:rippleColor="@color/md_theme_dark_primary">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/alarm"
            android:padding="14dp"
            android:tint="@color/text_on_glass_primary"
            android:contentDescription="Alarms"/>
            
    </com.google.android.material.card.MaterialCardView>
    
    <!-- Settings Button - Top Right -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/settingsButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:strokeWidth="0.5dp"
        app:strokeColor="@color/glass_border"
        android:background="@drawable/glass_card_background"
        app:rippleColor="@color/md_theme_dark_primary">
        
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_settings"
            android:padding="14dp"
            android:tint="@color/text_on_glass_primary"
            android:contentDescription="Settings"/>
            
    </com.google.android.material.card.MaterialCardView>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_padding_large">

            <!-- Hero Time Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/timeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/glass_border"
                android:stateListAnimator="@null">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_xlarge"
                    android:gravity="center"
                    android:background="@drawable/glass_card_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Time"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="@color/text_on_glass_secondary"
                        android:layout_marginBottom="@dimen/spacing_medium"
                        android:alpha="0.9"/>

                    <!-- Solar Ring Clock -->
                    <com.rooster.rooster.ui.SolarRingView
                        android:id="@+id/solarRingView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:minHeight="320dp"
                        android:maxHeight="400dp"
                        android:layout_marginVertical="16dp"/>

                    <!-- Progress Bar (kept for backward compatibility, can be hidden if desired) -->
                    <ProgressBar
                        android:id="@+id/progress_cycle"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:indeterminate="false"
                        android:progressDrawable="@drawable/progress_circular"
                        android:max="100"
                        android:progress="0"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="12dp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day progress"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="@color/text_on_glass_secondary"
                        android:alpha="0.85"
                        android:visibility="gone"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>


            <!-- Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/infoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeWidth="0.5dp"
                app:strokeColor="@color/glass_border"
                android:background="@drawable/glass_card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_xlarge">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ…"
                            android:textSize="@dimen/emoji_size_large"
                            android:layout_marginEnd="@dimen/spacing_large"
                            android:maxLines="1"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Wake with the Sun"
                            android:textAppearance="@style/TextAppearance.Rooster.HeadlineLarge"
                            android:textColor="@color/md_theme_dark_onSurface"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Set astronomy-based alarms that wake you up naturally with sunrise. Choose from multiple solar events like dawn, sunrise, and sunset."
                        android:textAppearance="@style/TextAppearance.Rooster.BodyLarge"
                        android:textColor="@color/text_on_glass_secondary"
                        android:lineSpacingExtra="8dp"
                        android:alpha="0.95"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
