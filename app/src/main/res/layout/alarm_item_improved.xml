<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/card_background_minimal"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="0.5dp"
    app:strokeColor="@color/card_border_minimal"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/md_theme_dark_primary"
    android:stateListAnimator="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding_xlarge">

        <!-- Header with Label and Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Mode Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/modeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    app:cardBackgroundColor="@android:color/transparent"
                    android:background="@drawable/badge_background"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/modeBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â˜€ï¸"
                        android:textSize="28sp"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- Alarm Label -->
                <TextView
                    android:id="@+id/textViewAlarmLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Alarm"
                    android:textColor="@color/md_theme_dark_onSurface"
                    android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

            </LinearLayout>

            <!-- Enable Switch -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAlarmEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/md_theme_dark_onPrimaryContainer"
                app:trackTint="@color/md_theme_dark_primaryContainer"/>

        </LinearLayout>

        <!-- Time Display -->
        <TextView
            android:id="@+id/tvAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:30 AM"
            android:textColor="@color/md_theme_dark_primary"
            android:textSize="64sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="-0.04"
            android:layout_marginBottom="16dp"/>

        <!-- Mode Description -->
        <TextView
            android:id="@+id/tvModeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="At Sunrise"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textColor="@color/md_theme_dark_onSurfaceVariant"
            android:alpha="0.85"
            android:layout_marginBottom="20dp"/>

        <!-- Repeat Days -->
        <LinearLayout
            android:id="@+id/repeatDaysRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“…"
                android:textSize="18sp"
                android:layout_marginEnd="8dp"
                android:alpha="0.7"/>

            <TextView
                android:id="@+id/tvRepeatDays"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Mon, Tue, Wed, Thu, Fri"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="@color/md_theme_dark_onSurfaceVariant"
                android:alpha="0.8"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
