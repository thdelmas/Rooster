<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/md_theme_dark_surfaceContainerHigh"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/md_theme_dark_primary"
    android:stateListAnimator="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding_small">

        <!-- 1st Line: Icon + (Alarm name above Solar event) + Toggle -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Mode Badge Icon -->
            <TextView
                android:id="@+id/modeBadgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="☀️"
                android:textSize="20sp"/>

            <!-- Alarm Label and Mode Description (stacked vertically) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Alarm Label -->
                <TextView
                    android:id="@+id/textViewAlarmLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Morning Alarm"
                    android:textColor="@color/md_theme_dark_onSurface"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Mode Description (Solar event) -->
                <TextView
                    android:id="@+id/tvModeDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="At Sunrise"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/md_theme_dark_onSurfaceVariant"
                    android:alpha="0.85"/>

            </LinearLayout>

            <!-- Enable Switch -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAlarmEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/md_theme_dark_onPrimaryContainer"
                app:trackTint="@color/md_theme_dark_primaryContainer"/>

        </LinearLayout>

        <!-- 2nd Line: Alarm Scheduled Time -->
        <TextView
            android:id="@+id/tvAlarmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06:30 AM"
            android:textColor="@color/md_theme_dark_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-light"
            android:letterSpacing="-0.02"
            android:layout_marginBottom="8dp"/>

        <!-- 3rd Line: Day Information (Today/Tomorrow/Days interval/day list/every day) -->
        <TextView
            android:id="@+id/tvRepeatDays"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mon, Tue, Wed, Thu, Fri"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/md_theme_dark_onSurfaceVariant"
            android:alpha="0.85"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
