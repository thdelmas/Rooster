<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/alarmCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="12dp"
        app:cardBackgroundColor="@color/md_theme_dark_surfaceContainerHigh"
        app:cardCornerRadius="28dp"
        app:cardElevation="6dp"
        app:strokeWidth="0dp"
        android:clickable="true"
        android:focusable="true"
        app:rippleColor="@color/md_theme_dark_primary"
        android:stateListAnimator="@null">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Header Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Mode Badge -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/modeBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    app:cardBackgroundColor="@color/md_theme_dark_primaryContainer"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="0dp">

                    <TextView
                        android:id="@+id/modeBadgeText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="☀️"
                        android:textSize="24sp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"/>

                </com.google.android.material.card.MaterialCardView>

                <!-- Alarm Label -->
                <TextView
                    android:id="@+id/textViewAlarmLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Morning Alarm"
                    android:textColor="@color/md_theme_dark_onSurface"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <!-- Enable Switch -->
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switchAlarmEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/md_theme_dark_onPrimaryContainer"
                    app:trackTint="@color/md_theme_dark_primaryContainer"/>

            </LinearLayout>

            <!-- Time Display -->
            <TextView
                android:id="@+id/tvAlarmTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06:30 AM"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="60sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.03"
                android:layout_marginBottom="12dp"/>

            <!-- Mode Description -->
            <TextView
                android:id="@+id/tvModeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At Sunrise"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="@color/md_theme_dark_onSurfaceVariant"
                android:alpha="0.9"
                android:layout_marginBottom="16dp"/>

            <!-- Repeat Days Row -->
            <LinearLayout
                android:id="@+id/repeatDaysRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="start">

                <TextView
                    android:id="@+id/tvRepeatDays"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, Tue, Wed, Thu, Fri"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/md_theme_dark_onSurfaceVariant"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>


