<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alarmCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="@color/md_theme_dark_surfaceContainerHigh"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:strokeWidth="0dp"
    android:clickable="true"
    android:focusable="true"
    app:rippleColor="@color/md_theme_dark_primary"
    android:stateListAnimator="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding_small">

        <!-- Top Row: Badge + Time + Switch -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Mode Badge -->
            <TextView
                android:id="@+id/modeBadgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="â˜€ï¸"
                android:textSize="20sp"/>

            <!-- Time Display -->
            <TextView
                android:id="@+id/tvAlarmTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="06:30 AM"
                android:textColor="@color/md_theme_dark_primary"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                android:letterSpacing="-0.02"/>

            <!-- Enable Switch -->
            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switchAlarmEnabled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/md_theme_dark_onPrimaryContainer"
                app:trackTint="@color/md_theme_dark_primaryContainer"/>

        </LinearLayout>

        <!-- Bottom Row: Label + Mode Description + Repeat Days -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Alarm Label -->
            <TextView
                android:id="@+id/textViewAlarmLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Morning Alarm"
                android:textColor="@color/md_theme_dark_onSurface"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginBottom="4dp"/>

            <!-- Mode Description and Repeat Days in same row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Mode Description -->
                <TextView
                    android:id="@+id/tvModeDescription"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="At Sunrise"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/md_theme_dark_onSurfaceVariant"
                    android:alpha="0.85"/>

                <!-- Repeat Days -->
                <LinearLayout
                    android:id="@+id/repeatDaysRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“…"
                        android:textSize="14sp"
                        android:layout_marginEnd="4dp"
                        android:alpha="0.7"/>

                    <TextView
                        android:id="@+id/tvRepeatDays"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mon, Tue, Wed, Thu, Fri"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="@color/md_theme_dark_onSurfaceVariant"
                        android:alpha="0.8"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
