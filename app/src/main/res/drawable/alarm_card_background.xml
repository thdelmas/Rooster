<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Very subtle soft shadow -->
    <item
        android:top="3dp"
        android:bottom="0dp"
        android:left="0dp"
        android:right="3dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/glass_shadow_soft"
                android:endColor="@android:color/transparent"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Base glass background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/glass_background_light"
                android:centerColor="@color/glass_background"
                android:endColor="@color/glass_background_medium"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Subtle highlight -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="45"
                android:startColor="@color/glass_highlight"
                android:endColor="@android:color/transparent"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Glass border -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/glass_border_light"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
