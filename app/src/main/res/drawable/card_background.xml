<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enhanced shadow layer -->
    <item android:drawable="@drawable/card_shadow_medium"/>
    
    <!-- Main card with astral solar gradient -->
    <item
        android:bottom="8dp"
        android:right="8dp"
        android:top="0dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/card_gradient_start"
                android:centerColor="@color/card_gradient_mid"
                android:endColor="@color/card_gradient_end"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Subtle border for definition -->
    <item
        android:bottom="8dp"
        android:right="8dp"
        android:top="0dp"
        android:left="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/md_theme_dark_outlineVariant" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
