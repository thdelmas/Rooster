<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Subtle shadow layer for depth -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_medium"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Main card with astral solar gradient -->
    <item
        android:bottom="2dp"
        android:right="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/card_gradient_start"
                android:centerColor="@color/card_gradient_mid"
                android:endColor="@color/card_gradient_end"
                android:type="linear" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
    
    <!-- Subtle border for definition -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="0.5dp"
                android:color="@color/md_theme_dark_outlineVariant" />
            <corners android:radius="20dp"/>
        </shape>
    </item>
</layer-list>
