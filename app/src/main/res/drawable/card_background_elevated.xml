<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/shadow_medium"/>
            <corners android:radius="32dp"/>
        </shape>
    </item>
    
    <!-- Main card with subtle gradient -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/md_theme_dark_surfaceContainerHigh"
                android:endColor="@color/md_theme_dark_surfaceContainer"
                android:type="linear" />
            <corners android:radius="32dp"/>
        </shape>
    </item>
</layer-list>
