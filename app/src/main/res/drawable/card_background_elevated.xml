<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Enhanced shadow layer for better depth -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/shadow_dark"
                android:endColor="@color/shadow_medium"
                android:type="linear" />
            <corners android:radius="32dp"/>
        </shape>
    </item>
    
    <!-- Main card with beautiful astral solar gradient -->
    <item
        android:bottom="4dp"
        android:right="4dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/card_gradient_start"
                android:centerColor="@color/card_gradient_mid"
                android:endColor="@color/card_gradient_end"
                android:type="linear" />
            <corners android:radius="32dp"/>
        </shape>
    </item>
    
    <!-- Subtle accent border with cosmic tint -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_dark_outlineVariant" />
            <corners android:radius="32dp"/>
        </shape>
    </item>
</layer-list>
